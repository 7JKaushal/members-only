<div class='display-4 p-1 text-center font-weight-bold text-uppercase text-white' style='font-family: serif;'>
{{title}}
</div>


<div class='rounded border border-light mx-auto p-2 m-2' style='width:500px'>
	<form class='container'>
		<div class='form-group text-center p-2'>
			<label for='password' class='font-weight-bold text-white text-uppercase'>Admin password :</label>
			<input type='password' id='password' name='password' class='form-control'>
		</div>

		<div class='form-group d-flex justify-content-center text-center'>
			<button type'submit' class='btn btn-outline-light'>Submit!</button>
		</div>
	</form>
</div>

<div class='mx-auto p-2 m-2 text-white' style='width:500px'>
{{#if errors}}
	<ul style='list-style=none;'>
	{{#each errors}}
		<li>{{this}}</li>
	{{/each}}
	</ul>
{{else}}
	<ul style='list-style: none;'>
		<li>Good to go!</li>
	</ul>
{{/if}}